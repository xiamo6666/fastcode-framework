<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssos.formengine.mapper.FieldMapper">
    <select id="findAll" resultType="com.ssos.formengine.vo.FieldVO">
         select * from field
    </select>
    <select id="findByIds" resultType="com.ssos.formengine.vo.FieldVO">
        select * from field where id in
        <foreach collection="ids" item="id" index="index" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>
</mapper>
